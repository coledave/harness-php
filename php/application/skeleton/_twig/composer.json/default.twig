{
    "name": "{{ @('workspace.name')|lower }}/php",
    "type": "project",
    "license": "proprietary",
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "ciaranmcnulty/behat-stepthroughextension": "^1.0",
        "dmore/chrome-mink-driver": "^2.6",
        "friends-of-behat/context-service-extension": "^1.2",
        "friends-of-behat/cross-container-extension": "^1.1",
        "friendsofphp/php-cs-fixer": "~2.2.1",
        "my127/behat-chrome-extension": "^1.2",
        "pdepend/pdepend": "2.5.2",
        "phpmd/phpmd": "@stable",
        "phpspec/phpspec": "^4.0",
        "phpunit/phpunit": "~6.2.0",
        "sebastian/phpcpd": "2.0.4",
        "sensiolabs/behat-page-object-extension": "^2.1",
        "squizlabs/php_codesniffer": "3.2.2"
    },
    "autoload": {
        "psr-0": {
            "": ["src"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acceptance\\": "features/bootstrap"
        }
    },
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/my127/behat-chrome-extension"
        }
    ],
    "scripts": {
        "test": [
            "@test-quality",
            "@test-unit",
            "@test-acceptance"
        ],
        "test-quality": [
            "phpcs -v ./src",
            "phpmd ./src text ./phpmd.xml"
        ],
        "test-unit": [
            "phpspec run"
        ],
        "test-acceptance": [
            "behat"
        ]
    },
    "config": {
        "bin-dir": "bin"
    }
}
